@model MomentozWebClient.Models.OrderData

@{
    ViewData["Title"] = "ViewOrderData";
}

<h1>Ordre</h1>

<h4>Ordre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.OrderFlight.Price" class="control-label">Samlet pris</label>
                <div style="background-color:white;padding:5px;">
                    @Model.OrderFlight.Price DKK
                </div>
                <span asp-validation-for="@Model.OrderFlight.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Afrejse</label>
                <div style="background-color:white;padding:5px;">
                    @Model.OrderFlight.Departure   
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Land Destination</label>
                <div style="background-color:white;padding:5px;">
                    @Model.OrderFlight.DestinationCountry    
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Destination</label>
                <div style="background-color:white;padding:5px;">
                    @Model.OrderFlight.DestinationAddress    
                </div>
            </div>
            
        </form>
    </div>
</div>
<form method="Post" asp-controller="Order" asp-action="ViewOrderReceipt" asp-route-id="@Model.Id" >
    <div class="form-group">
        <input type="submit" value="Køb" class="btn btn-primary" style="margin-top:10px;"/>
    </div>
</form>

<div>
    <a asp-controller="Flight" asp-action="Flights">Tilbage</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
